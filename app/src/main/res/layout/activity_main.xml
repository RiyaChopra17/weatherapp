<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="25dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/countryCodeTxt"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="+91"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="18sp" />
        <View
            android:layout_width="1dp"
            android:layout_height="35dp"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/countryCodeTxt"/>

        <EditText
            android:id="@+id/et_serach"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_toRightOf="@id/countryCodeTxt"
            android:background="@android:color/transparent"
            android:digits="0123456789+"
            android:fontFamily="@font/montserrat_regular"
            android:hint="Please enter your number"
            android:inputType="numberDecimal"
            android:maxLength="12"
            android:paddingLeft="12dp"

            android:textColor="@color/teal_200"
            android:textColorHint="@color/hintColor"
            android:textSize="14sp"

            />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_cloud_queue_dark"
            android:visibility="gone"
            android:id="@+id/img_cancel_et"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:visibility="gone"
        android:layout_marginTop="5dp"
        android:id="@+id/search_dialog"
        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/headers"
            android:background="@color/purple_200"
            android:text="Select Country"
            android:textColor="@color/white"

            android:gravity="center"
            android:textSize="18dp"
            />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_cloud_queue_dark"
            android:layout_marginTop="12dp"
            android:layout_alignParentLeft="true"
            android:id="@+id/backimage"
            android:layout_marginLeft="10dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:hint="Search Country"
            android:paddingLeft="15dp"
            android:layout_below="@+id/headers"
            android:background="@color/black"
            android:inputType="textCapSentences"
            android:id="@+id/search_country"
            />
        <ListView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/search_country"
            android:id="@+id/listview"
            android:dividerHeight="0dp"
            android:divider="#ffffff"
            ></ListView>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:id="@+id/textView"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"  android:layout_margin="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:layout_width="wrap_content"
        android:layout_margin="20dp"
        android:text="button"
        android:layout_height="wrap_content"
        android:id="@+id/button"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner" />
</androidx.appcompat.widget.LinearLayoutCompat>